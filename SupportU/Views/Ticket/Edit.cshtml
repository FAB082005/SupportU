@model SupportU.Application.DTOs.TicketDTO
@{
    ViewData["Title"] = "Editar Ticket";
    var tecnicos = ViewBag.Tecnicos as List<SupportU.Application.DTOs.TecnicoDTO>;
    var etiquetas = ViewBag.Etiquetas as List<SupportU.Application.DTOs.EtiquetaDTO>;
    var categorias = ViewBag.Categorias as List<SupportU.Application.DTOs.CategoriaDTO>;
    var metodoAsignacionActual = Model.TecnicoAsignadoId.HasValue ? "Manual" : "Automatico";
}

<section class="section mt-5 mt-lg-7 pt-4 pt-lg-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="card-title mb-1">Editar Ticket #@Model.TicketId</h4>
                    <small class="text-muted">
                        <i class="bi bi-calendar me-1"></i>
                        Creado el @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
                <span class="badge bg-@(Model.Estado == "Pendiente" ? "warning" : Model.Estado == "Asignado" ? "info" : Model.Estado == "En Proceso" ? "primary" : Model.Estado == "Resuelto" ? "success" : "secondary") fs-6">
                    @Model.Estado
                </span>
            </div>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="TicketId" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label fw-bold">Título *</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ej: Monitor no enciende" required />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-bold">Descripción *</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="4"
                              placeholder="Describe el problema con el mayor detalle posible..." required></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Prioridad" class="form-label fw-bold">Prioridad *</label>
                        <select asp-for="Prioridad" class="form-select" required>
                            <option value="">-- Seleccione --</option>
                            <option value="Baja">Baja</option>
                            <option value="Media">Media</option>
                            <option value="Alta">Alta</option>
                            <option value="Crítica">Crítica</option>
                        </select>
                        <span asp-validation-for="Prioridad" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Estado" class="form-label fw-bold">Estado *</label>
                        <select asp-for="Estado" class="form-select" required id="selectEstado">
                            <option value="">-- Seleccione --</option>
                            <option value="Pendiente">Pendiente</option>
                            <option value="Asignado">Asignado</option>
                            <option value="En Proceso">En Proceso</option>
                            <option value="Resuelto">Resuelto</option>
                            <option value="Cerrado">Cerrado</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label for="etiquetaSeleccionadaId" class="form-label fw-bold">Etiqueta *</label>
                        <select id="etiquetaSeleccionadaId" name="etiquetaSeleccionadaId" class="form-select" required>
                            <option value="">-- Seleccione una etiqueta --</option>
                            @if (etiquetas != null && etiquetas.Any())
                            {
                                @foreach (var etiqueta in etiquetas)
                                {
                                    var isSelected = etiqueta.CategoriaId == Model.CategoriaId;
                                    <option value="@etiqueta.EtiquetaId"
                                            data-categoria-id="@etiqueta.CategoriaId"
                                            selected="@isSelected">
                                        @etiqueta.Nombre
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="mb-3 mt-3">
                    <label for="categoriaNombre" class="form-label fw-bold">Categoría Asignada</label>
                    <input type="text" id="categoriaNombre" class="form-control"
                           value="@Model.Categoria?.Nombre" readonly />
                    <input asp-for="CategoriaId" type="hidden" id="categoriaIdHidden" />
                </div>

                <div class="card mt-4 border">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-person-gear me-2"></i>Asignación de Técnico</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="metodoAsignacion"
                                       id="radioAutomatico" value="Automatico"
                                       @(metodoAsignacionActual == "Automatico" ? "checked" : "")>
                                <label class="form-check-label" for="radioAutomatico">
                                    Asignación Automática
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="metodoAsignacion"
                                       id="radioManual" value="Manual"
                                       @(metodoAsignacionActual == "Manual" ? "checked" : "")>
                                <label class="form-check-label" for="radioManual">
                                    Asignación Manual
                                </label>
                            </div>
                        </div>

                        @if (Model.TecnicoAsignadoId.HasValue && Model.TecnicoAsignado != null)
                        {
                            <div class="alert alert-info mb-3">
                                <i class="bi bi-person-check-fill me-2"></i>
                                <strong>Técnico actual:</strong>
                                @Model.TecnicoAsignado.Usuario.Nombre @Model.TecnicoAsignado.Usuario.Apellidos
                            </div>
                        }

                        <div id="mensajeAutomatico" class="alert alert-info mb-0 @(metodoAsignacionActual == "Manual" ? "d-none" : "")">
                            <i class="bi bi-info-circle me-2"></i>
                            Se asignará un técnico automáticamente según disponibilidad
                        </div>

                        <div id="seccionManual" class="@(metodoAsignacionActual == "Automatico" ? "d-none" : "")">
                            @if (tecnicos != null && tecnicos.Any())
                            {
                                <div class="list-group">
                                    @foreach (var tecnico in tecnicos)
                                    {
                                        var isCurrentTecnico = Model.TecnicoAsignadoId.HasValue && tecnico.TecnicoId == Model.TecnicoAsignadoId.Value;
                                        <label class="list-group-item list-group-item-action d-flex justify-content-between align-items-center tecnico-item @(isCurrentTecnico ? "active" : "")">
                                            <div class="d-flex align-items-center gap-3">
                                                <input type="radio" name="tecnicoSeleccionadoId"
                                                       value="@tecnico.TecnicoId"
                                                       class="form-check-input radio-tecnico"
                                                       id="tecnico_@tecnico.TecnicoId"
                                                       @(isCurrentTecnico ? "checked" : "")>
                                                <span class="fw-medium">
                                                    @tecnico.NombreUsuario
                                                    @if (isCurrentTecnico)
                                                    {
                                                        <span class="badge bg-success ms-2">Actual</span>
                                                    }
                                                </span>
                                            </div>
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-star-fill"></i> @tecnico.CalificacionPromedio.ToString("0.00")
                                            </span>
                                        </label>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    No hay técnicos disponibles
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="card mt-4 border-success">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-clock-history me-2"></i>Registrar Cambio en Historial
                        </h5>
                        <span class="badge bg-light text-dark">Opcional</span>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="switchAgregarHistorial" name="agregarHistorial" value="true">
                            <label class="form-check-label fw-bold" for="switchAgregarHistorial">
                                Agregar entrada al historial de estados
                            </label>
                        </div>

                        <div id="seccionObservaciones" class="d-none">
                            <div class="mb-3">
                                <label for="observacionesHistorial" class="form-label fw-bold">
                                    Observaciones del Cambio *
                                </label>
                                <textarea id="observacionesHistorial"
                                          name="observacionesHistorial"
                                          class="form-control"
                                          rows="4"
                                          placeholder="Describe los cambios realizados o motivos del cambio de estado..."></textarea>
                            </div>

                            <div class="alert alert-warning mb-0">
                                <strong>Se registrará:</strong> Estado anterior (@Model.Estado) → Estado nuevo (<span id="estadoNuevoPreview" class="fw-bold">@Model.Estado</span>)
                            </div>
                        </div>
                    </div>
                </div>

                <input asp-for="UsuarioSolicitanteId" type="hidden" />
                <input asp-for="FechaCreacion" type="hidden" />
                <input asp-for="FechaCierre" type="hidden" />
                <input asp-for="CumplimientoRespuesta" type="hidden" />
                <input asp-for="CumplimientoResolucion" type="hidden" />
                <input asp-for="fecha_primera_respuesta" type="hidden" />
                <input asp-for="fecha_resolucion" type="hidden" />

                <div class="alert alert-light border mt-3">
                    <small class="text-muted">
                        <strong>Usuario:</strong>
                        @if (Model.UsuarioSolicitante != null)
                        {
                            @Model.UsuarioSolicitante.Nombre @Model.UsuarioSolicitante.Apellidos
                        }
                        else
                        {
                            <span>ID @Model.UsuarioSolicitanteId</span>
                        }
                        | <strong>Fecha:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-success" id="btnSubmit">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-primary ms-auto">
                        <i class="bi bi-list-ul"></i> Ver Todos
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const estadoOriginal = '@Model.Estado';
        const categoriaMap = new Map();
        @if (categorias != null)
        {
                foreach (var cat in categorias)
                {
                        @:categoriaMap.set(@cat.CategoriaId, '@cat.Nombre');
                }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const radioAutomatico = document.getElementById('radioAutomatico');
            const radioManual = document.getElementById('radioManual');
            const mensajeAutomatico = document.getElementById('mensajeAutomatico');
            const seccionManual = document.getElementById('seccionManual');
            const form = document.querySelector('form[method="post"]');
            const btnSubmit = document.getElementById('btnSubmit');
            const switchHistorial = document.getElementById('switchAgregarHistorial');
            const seccionObservaciones = document.getElementById('seccionObservaciones');
            const observacionesTextarea = document.getElementById('observacionesHistorial');
            const selectEstado = document.getElementById('selectEstado');
            const estadoNuevoPreview = document.getElementById('estadoNuevoPreview');
            const selectEtiqueta = document.getElementById('etiquetaSeleccionadaId');
            const inputCategoriaNombre = document.getElementById('categoriaNombre');
            const inputCategoriaId = document.getElementById('categoriaIdHidden');

            selectEtiqueta.addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];
                const categoriaId = selectedOption.getAttribute('data-categoria-id');

                if (categoriaId) {
                    inputCategoriaId.value = categoriaId;
                    const categoriaNombre = categoriaMap.get(parseInt(categoriaId)) || 'Categoría no encontrada';
                    inputCategoriaNombre.value = categoriaNombre;
                } else {
                    inputCategoriaId.value = '';
                    inputCategoriaNombre.value = 'Se asigna automáticamente...';
                }
            });

            switchHistorial.addEventListener('change', function() {
                if (this.checked) {
                    seccionObservaciones.classList.remove('d-none');
                    observacionesTextarea.required = true;
                } else {
                    seccionObservaciones.classList.add('d-none');
                    observacionesTextarea.required = false;
                    observacionesTextarea.value = '';
                }
            });

            selectEstado.addEventListener('change', function() {
                estadoNuevoPreview.textContent = this.value || estadoOriginal;
            });

            function toggleAsignacion() {
                if (radioManual.checked) {
                    mensajeAutomatico.classList.add('d-none');
                    seccionManual.classList.remove('d-none');
                } else {
                    mensajeAutomatico.classList.remove('d-none');
                    seccionManual.classList.add('d-none');
                    document.querySelectorAll('.radio-tecnico').forEach(radio => radio.checked = false);
                }
            }

            radioAutomatico.addEventListener('change', toggleAsignacion);
            radioManual.addEventListener('change', toggleAsignacion);

            document.querySelectorAll('.radio-tecnico').forEach(radio => {
                radio.addEventListener('change', function() {
                    document.querySelectorAll('.tecnico-item').forEach(item => {
                        item.classList.remove('active');
                    });
                    if (this.checked) {
                        this.closest('.tecnico-item').classList.add('active');
                    }
                });
            });

            form.addEventListener('submit', function (e) {
                const etiquetaId = selectEtiqueta.value;
                const categoriaId = inputCategoriaId.value;
                const metodoAsignacion = form.querySelector('[name="metodoAsignacion"]:checked')?.value;
                const historialActivado = switchHistorial.checked;
                const observaciones = observacionesTextarea.value.trim();

                if (!etiquetaId || etiquetaId === '') {
                    e.preventDefault();
                    alert('Debe seleccionar una etiqueta');
                    selectEtiqueta.focus();
                    return false;
                }

                if (!categoriaId || categoriaId === '') {
                    e.preventDefault();
                    alert('Error: No se pudo determinar la categoría');
                    return false;
                }

                if (metodoAsignacion === 'Manual') {
                    const tecnicoSeleccionado = form.querySelector('[name="tecnicoSeleccionadoId"]:checked');
                    if (!tecnicoSeleccionado) {
                        e.preventDefault();
                        alert('Debe seleccionar un técnico para asignación manual');
                        return false;
                    }
                }

                if (historialActivado && (!observaciones || observaciones === '')) {
                    e.preventDefault();
                    alert(' Debe agregar observaciones para registrar en el historial');
                    observacionesTextarea.focus();
                    return false;
                }

                if (btnSubmit) {
                    btnSubmit.disabled = true;
                    btnSubmit.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Guardando...';
                }
            });

            toggleAsignacion();

            const categoriaActualId = parseInt('@Model.CategoriaId');
            if (categoriaActualId && categoriaMap.has(categoriaActualId)) {
                inputCategoriaNombre.value = categoriaMap.get(categoriaActualId);
            }
        });
    </script>

    <style>
        .tecnico-item {
            cursor: pointer;
            transition: all 0.2s;
        }

            .tecnico-item:hover {
                background-color: #f8f9fa;
            }

            .tecnico-item.active {
                background-color: #e7f3ff;
                border-color: #0d6efd;
            }

        #categoriaNombre {
            background-color: #f8f9fa;
        }

        #observacionesHistorial {
            resize: vertical;
            min-height: 100px;
        }
    </style>
}