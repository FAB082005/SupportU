@model SupportU.Application.DTOs.TicketDTO
@{
    ViewData["Title"] = "Editar Ticket";
    var tecnicos = ViewBag.Tecnicos as List<SupportU.Application.DTOs.TecnicoDTO>;
    var etiquetas = ViewBag.Etiquetas as List<SupportU.Application.DTOs.EtiquetaDTO>;
    var categorias = ViewBag.Categorias as List<SupportU.Application.DTOs.CategoriaDTO>;

    // Agrupar etiquetas por categoría para el dropdown
    var etiquetasPorCategoria = etiquetas?
        .Where(e => e.Activa)
        .GroupBy(e => e.CategoriaId)
        .ToDictionary(g => g.Key, g => g.ToList());
}

<section class="section mt-5 mt-lg-7 pt-4 pt-lg-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <!-- ... código existente ... -->
            </div>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="Edit" method="post" id="editForm">
                @Html.AntiForgeryToken()
                <input asp-for="TicketId" type="hidden" />
                <input asp-for="UsuarioSolicitanteId" type="hidden" />
                <input asp-for="FechaCreacion" type="hidden" />
                <input asp-for="Estado" type="hidden" />
                <input asp-for="FechaCierre" type="hidden" />
                <input asp-for="CumplimientoRespuesta" type="hidden" />
                <input asp-for="CumplimientoResolucion" type="hidden" />
                <input asp-for="fecha_primera_respuesta" type="hidden" />
                <input asp-for="fecha_resolucion" type="hidden" />
                <input asp-for="TecnicoAsignadoId" type="hidden" />
                <input asp-for="CategoriaId" type="hidden" id="categoriaIdHidden" value="@Model.CategoriaId" />

                <!-- Campo oculto para la etiqueta seleccionada -->
                <input type="hidden" name="etiquetaSeleccionadaId" id="etiquetaSeleccionadaIdInput" />

                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label fw-bold">Título *</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ej: Monitor no enciende" required />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-bold">Descripción *</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="4"
                              placeholder="Describe el problema con el mayor detalle posible..." required></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Prioridad" class="form-label fw-bold">Prioridad *</label>
                        <select asp-for="Prioridad" class="form-select" required>
                            <option value="">-- Seleccione --</option>
                            <option value="Baja">Baja</option>
                            <option value="Media">Media</option>
                            <option value="Alta">Alta</option>
                            <option value="Crítica">Crítica</option>
                        </select>
                        <span asp-validation-for="Prioridad" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Etiqueta *</label>
                        <select id="etiquetaSelect" class="form-select" required>
                            <option value="">-- Seleccione una etiqueta --</option>
                            @if (etiquetas != null && etiquetas.Any())
                            {
                                // Primero mostrar etiquetas de la categoría actual
                                var etiquetasCategoriaActual = etiquetas
                                .Where(e => e.CategoriaId == Model.CategoriaId)
                                .OrderBy(e => e.Nombre);

                                @if (etiquetasCategoriaActual.Any())
                                {
                                    <optgroup label="Etiquetas de la categoría actual">
                                        @foreach (var etiqueta in etiquetasCategoriaActual)
                                        {
                                            <option value="@etiqueta.EtiquetaId"
                                                    data-categoria-id="@etiqueta.CategoriaId">
                                                @etiqueta.Nombre
                                            </option>
                                        }
                                    </optgroup>
                                }

                                // Luego mostrar todas las demás etiquetas agrupadas por categoría
                                var otrasEtiquetas = etiquetas
                                .Where(e => e.CategoriaId != Model.CategoriaId)
                                .GroupBy(e => e.CategoriaId);

                                @foreach (var grupo in otrasEtiquetas)
                                {
                                    var categoria = categorias?.FirstOrDefault(c => c.CategoriaId == grupo.Key);
                                    <optgroup label="@(categoria?.Nombre ?? "Categoría " + grupo.Key)">
                                        @foreach (var etiqueta in grupo.OrderBy(e => e.Nombre))
                                        {
                                            <option value="@etiqueta.EtiquetaId"
                                                    data-categoria-id="@etiqueta.CategoriaId">
                                                @etiqueta.Nombre
                                            </option>
                                        }
                                    </optgroup>
                                }
                            }
                        </select>
                        <small class="text-muted">Al cambiar la etiqueta, se actualizará la categoría automáticamente</small>
                    </div>
                </div>

                <div class="mb-3 mt-3">
                    <label for="categoriaNombre" class="form-label fw-bold">Categoría Asignada</label>
                    <input type="text" id="categoriaNombre" class="form-control"
                           value="@Model.Categoria?.Nombre" readonly />
                </div>

                <div class="alert alert-light border mt-3">
                    <!-- ... código existente ... -->
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-success" id="btnSubmit">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const etiquetaSelect = document.getElementById('etiquetaSelect');
            const etiquetaInput = document.getElementById('etiquetaSeleccionadaIdInput');
            const categoriaIdHidden = document.getElementById('categoriaIdHidden');
            const categoriaNombre = document.getElementById('categoriaNombre');
            const form = document.getElementById('editForm');
            const btnSubmit = document.getElementById('btnSubmit');

            // Mapa de categorías para búsqueda rápida
            const categoriaMap = new Map();
            @if (categorias != null)
            {
                    foreach (var cat in categorias)
                    {
                            @:categoriaMap.set(@cat.CategoriaId, '@Html.Raw(cat.Nombre)');
                    }
            }

            // Configurar evento de cambio en etiqueta
            etiquetaSelect.addEventListener('change', function () {
                const selectedOption = this.options[this.selectedIndex];
                const etiquetaId = this.value;
                const categoriaId = selectedOption.getAttribute('data-categoria-id');

                if (etiquetaId && categoriaId) {
                    // Actualizar campos
                    etiquetaInput.value = etiquetaId;
                    categoriaIdHidden.value = categoriaId;
                    categoriaNombre.value = categoriaMap.get(parseInt(categoriaId)) || 'Categoría ' + categoriaId;
                } else {
                    etiquetaInput.value = '';
                    categoriaIdHidden.value = '';
                    categoriaNombre.value = '';
                }
            });

            // Configurar valores iniciales
            function inicializarEtiquetaSeleccionada() {
                const categoriaActualId = @Model.CategoriaId;

                // Buscar una etiqueta que pertenezca a la categoría actual
                const opciones = etiquetaSelect.options;
                for (let i = 0; i < opciones.length; i++) {
                    const option = opciones[i];
                    const optionCategoriaId = option.getAttribute('data-categoria-id');

                    if (optionCategoriaId && parseInt(optionCategoriaId) === categoriaActualId) {
                        // Seleccionar la primera etiqueta de esta categoría
                        etiquetaSelect.value = option.value;
                        etiquetaInput.value = option.value;
                        categoriaNombre.value = categoriaMap.get(categoriaActualId) || 'Categoría ' + categoriaActualId;
                        break;
                    }
                }
            }

            inicializarEtiquetaSeleccionada();

            // Manejar envío del formulario
            form.addEventListener('submit', function (e) {
                const etiquetaId = etiquetaSelect.value;
                const categoriaId = categoriaIdHidden.value;

                // Validaciones
                if (!etiquetaId || etiquetaId === '') {
                    e.preventDefault();
                    alert('Debe seleccionar una etiqueta');
                    etiquetaSelect.focus();
                    return false;
                }

                if (!categoriaId || categoriaId === '') {
                    e.preventDefault();
                    alert('Error: No se pudo determinar la categoría');
                    return false;
                }

                // Deshabilitar botón y mostrar indicador de carga
                if (btnSubmit) {
                    btnSubmit.disabled = true;
                    btnSubmit.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Guardando...';
                }

                return true;
            });
        });
    </script>
}