@model SupportU.Application.DTOs.TicketDTO
@{
    ViewData["Title"] = "Crear Ticket";
    var tecnicos = ViewBag.Tecnicos as List<SupportU.Application.DTOs.TecnicoDTO>;
    var etiquetas = ViewBag.Etiquetas as List<SupportU.Application.DTOs.EtiquetaDTO>;
    var categorias = ViewBag.Categorias as List<SupportU.Application.DTOs.CategoriaDTO>;
}

<section class="section mt-5 mt-lg-7 pt-4 pt-lg-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">
                <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Ticket
            </h4>
            <p class="text-muted mb-4">Complete el formulario para registrar un nuevo ticket de soporte</p>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="Create" method="post" id="formCrearTicket">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label fw-bold">Título *</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ej: Monitor no enciende" required />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-bold">Descripción *</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="4"
                              placeholder="Describe el problema con el mayor detalle posible..." required></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Prioridad" class="form-label fw-bold">Prioridad *</label>
                        <select asp-for="Prioridad" class="form-select" required>
                            <option value="">-- Seleccione --</option>
                            <option value="Baja">Baja</option>
                            <option value="Media" selected>Media</option>
                            <option value="Alta">Alta</option>
                            <option value="Crítica">Crítica</option>
                        </select>
                        <span asp-validation-for="Prioridad" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="etiquetaSeleccionadaId" class="form-label fw-bold">Etiqueta *</label>
                        <select id="etiquetaSeleccionadaId" name="etiquetaSeleccionadaId" class="form-select" required>
                            <option value="">-- Seleccione una etiqueta --</option>
                            @if (etiquetas != null && etiquetas.Any())
                            {
                                @foreach (var etiqueta in etiquetas)
                                {
                                    <option value="@etiqueta.EtiquetaId" data-categoria-id="@etiqueta.CategoriaId">
                                        @etiqueta.Nombre
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="mb-3 mt-3">
                    <label for="categoriaNombre" class="form-label fw-bold">Categoría Asignada</label>
                    <input type="text" id="categoriaNombre" class="form-control"
                           placeholder="Se asigna automáticamente..." readonly />
                    <input asp-for="CategoriaId" type="hidden" id="categoriaIdHidden" />
                </div>

                <div class="card mt-4 border">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-person-gear me-2"></i>Asignación de Técnico</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="metodoAsignacion"
                                       id="radioAutomatico" value="Automatico" checked>
                                <label class="form-check-label" for="radioAutomatico">
                                    Asignación Automática
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="metodoAsignacion"
                                       id="radioManual" value="Manual">
                                <label class="form-check-label" for="radioManual">
                                    Asignación Manual
                                </label>
                            </div>
                        </div>

                        <div id="mensajeAutomatico" class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            Se asignará un técnico automáticamente según disponibilidad
                        </div>

                        <div id="seccionManual" class="d-none">
                            @if (tecnicos != null && tecnicos.Any())
                            {
                                <div class="list-group">
                                    @foreach (var tecnico in tecnicos)
                                    {
                                        <label class="list-group-item list-group-item-action d-flex justify-content-between align-items-center tecnico-item">
                                            <div class="d-flex align-items-center gap-3">
                                                <input type="radio" name="tecnicoSeleccionadoId"
                                                       value="@tecnico.TecnicoId"
                                                       class="form-check-input radio-tecnico"
                                                       id="tecnico_@tecnico.TecnicoId">
                                                <span class="fw-medium">@tecnico.NombreUsuario</span>
                                            </div>
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-star-fill"></i> @tecnico.CalificacionPromedio.ToString("0.00")
                                            </span>
                                        </label>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    No hay técnicos disponibles
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <input asp-for="UsuarioSolicitanteId" type="hidden" />
                <input asp-for="Estado" type="hidden" />
                <input asp-for="FechaCreacion" type="hidden" />

                <div class="alert alert-light border mt-3">
                    <small class="text-muted">
                        <strong>Usuario:</strong> ID @Model.UsuarioSolicitanteId |
                        <strong>Estado:</strong> Pendiente |
                        <strong>Fecha:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-success" id="btnSubmit">
                        <i class="bi bi-save"></i> Crear Ticket
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const categoriaMap = new Map();
        @if (categorias != null)
        {
                foreach (var cat in categorias)
                {
                        @:categoriaMap.set(@cat.CategoriaId, '@cat.Nombre');
                }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const radioAutomatico = document.getElementById('radioAutomatico');
            const radioManual = document.getElementById('radioManual');
            const mensajeAutomatico = document.getElementById('mensajeAutomatico');
            const seccionManual = document.getElementById('seccionManual');
            const form = document.getElementById('formCrearTicket');
            const btnSubmit = document.getElementById('btnSubmit');
            const selectEtiqueta = document.getElementById('etiquetaSeleccionadaId');
            const inputCategoriaNombre = document.getElementById('categoriaNombre');
            const inputCategoriaId = document.getElementById('categoriaIdHidden');

            selectEtiqueta.addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];
                const categoriaId = selectedOption.getAttribute('data-categoria-id');

                if (categoriaId) {
                    inputCategoriaId.value = categoriaId;
                    const categoriaNombre = categoriaMap.get(parseInt(categoriaId)) || 'Categoría no encontrada';
                    inputCategoriaNombre.value = categoriaNombre;
                } else {
                    inputCategoriaId.value = '';
                    inputCategoriaNombre.value = 'Se asigna automáticamente...';
                }
            });

            function toggleAsignacion() {
                if (radioManual.checked) {
                    mensajeAutomatico.classList.add('d-none');
                    seccionManual.classList.remove('d-none');
                } else {
                    mensajeAutomatico.classList.remove('d-none');
                    seccionManual.classList.add('d-none');
                    document.querySelectorAll('.radio-tecnico').forEach(radio => radio.checked = false);
                }
            }

            radioAutomatico.addEventListener('change', toggleAsignacion);
            radioManual.addEventListener('change', toggleAsignacion);

            document.querySelectorAll('.radio-tecnico').forEach(radio => {
                radio.addEventListener('change', function() {
                    document.querySelectorAll('.tecnico-item').forEach(item => {
                        item.classList.remove('active');
                    });
                    if (this.checked) {
                        this.closest('.tecnico-item').classList.add('active');
                    }
                });
            });

            form.addEventListener('submit', function (e) {
                const etiquetaId = selectEtiqueta.value;
                const categoriaId = inputCategoriaId.value;
                const metodoAsignacion = form.querySelector('[name="metodoAsignacion"]:checked')?.value;

                if (!etiquetaId) {
                    e.preventDefault();
                    alert('⚠️ Debe seleccionar una etiqueta');
                    selectEtiqueta.focus();
                    return false;
                }

                if (!categoriaId) {
                    e.preventDefault();
                    alert('⚠️ Error: No se pudo determinar la categoría');
                    return false;
                }

                if (metodoAsignacion === 'Manual') {
                    const tecnicoSeleccionado = form.querySelector('[name="tecnicoSeleccionadoId"]:checked');
                    if (!tecnicoSeleccionado) {
                        e.preventDefault();
                        alert('⚠️ Debe seleccionar un técnico para asignación manual');
                        return false;
                    }
                }

                if (btnSubmit) {
                    btnSubmit.disabled = true;
                    btnSubmit.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Guardando...';
                }
            });

            toggleAsignacion();
        });
    </script>

    <style>
        .tecnico-item {
            cursor: pointer;
            transition: all 0.2s;
        }

            .tecnico-item:hover {
                background-color: #f8f9fa;
            }

            .tecnico-item.active {
                background-color: #e7f3ff;
                border-color: #0d6efd;
            }

        #categoriaNombre {
            background-color: #f8f9fa;
        }
    </style>
}