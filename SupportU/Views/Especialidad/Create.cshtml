@model SupportU.Application.DTOs.EspecialidadDTO
@{
    ViewData["Title"] = "Nueva Especialidad";
}

<section class="section mt-5">
    <div class="container">
        <h2>Nueva Especialidad</h2>
        <form asp-action="Create" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Activa" class="form-check-input" />
                <label asp-for="Activa" class="form-check-label">Activa</label>
            </div>
            <div class="d-flex gap-2 justify-content-end">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
