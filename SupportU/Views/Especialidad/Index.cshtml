@model IEnumerable<SupportU.Application.DTOs.EspecialidadDTO>
@{
    ViewData["Title"] = "Gestión de Especialidades";
}

<section class="section mt-5 mt-lg-7 pt-4 pt-lg-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Gestión de Especialidades</h2>
            <a asp-action="Create" class="btn btn-create">
                <i class="bi bi-plus-circle"></i> Nueva Especialidad
            </a>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Activa</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>
                                @if (item.Activa)
                                {
                                    <span class="badge bg-success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactiva</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.EspecialidadId" class="btn btn-sm btn-edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.EspecialidadId" class="btn btn-sm btn-delete">
                                    <i class="bi bi-power"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
