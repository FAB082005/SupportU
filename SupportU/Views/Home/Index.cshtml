@{
    // Helper local para traducciones (fallback a ViewData["Translations"] cargado por BaseController o por el layout)
    Func<string, string> t = key =>
    {
        if (string.IsNullOrWhiteSpace(key)) return string.Empty;
        var translations = ViewData["Translations"] as Dictionary<string, string>
            ?? new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
        return translations.TryGetValue(key, out var val) ? val : key;
    };

    ViewData["Title"] = t("Home_Title");
}

<section id="hero" class="hero section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="zoom-in" data-aos-delay="200">
                <div class="hero-content text-center">
                    <div class="hero-badge" data-aos="fade-down" data-aos-delay="300">
                        <i class="bi bi-star-fill"></i>
                        <span>@t("Hero_Badge")</span>
                    </div>

                    <h1 class="hero-title" data-aos="fade-up" data-aos-delay="400">@t("Hero_Title")</h1>

                    <p class="hero-description" data-aos="fade-up" data-aos-delay="500">
                        @t("Hero_Description")
                    </p>

                    <div class="hero-actions" data-aos="fade-up" data-aos-delay="600">
                        <a asp-controller="Perfiles" asp-action="Index" class="btn btn-primary">@t("Btn_Profiles")</a>
                        <a asp-controller="Home" asp-action="Privacy" class="btn btn-outline-secondary">@t("Btn_Privacy")</a>
                    </div>

                    <div class="hero-metrics" data-aos="fade-up" data-aos-delay="700">
                        <div class="metric-item">
                            <div class="metric-icon"><i class="bi bi-people"></i></div>
                            <div class="metric-content">
                                <span class="metric-number">@t("Metric_Users_Number")</span>
                                <span class="metric-label">@t("Metric_Users_Label")</span>
                            </div>
                        </div>

                        <div class="metric-item">
                            <div class="metric-icon"><i class="bi bi-ticket"></i></div>
                            <div class="metric-content">
                                <span class="metric-number">@t("Metric_Tickets_Number")</span>
                                <span class="metric-label">@t("Metric_Tickets_Label")</span>
                            </div>
                        </div>

                        <div class="metric-item">
                            <div class="metric-icon"><i class="bi bi-globe"></i></div>
                            <div class="metric-content">
                                <span class="metric-number">@t("Metric_Coverage_Number")</span>
                                <span class="metric-label">@t("Metric_Coverage_Label")</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    @if (TempData["NotificationMessage"] != null)
    {
        <text>
            <script>
                @Html.Raw(TempData["NotificationMessage"].ToString())
            </script>
        </text>
    }
}
