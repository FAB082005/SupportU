@model SupportU.Application.DTOs.EtiquetaDTO
@{
    ViewData["Title"] = "Editar Etiqueta";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> Editar Etiqueta
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.EtiquetaId" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EtiquetaId" />

                        <div class="mb-3">
                            <label class="form-label text-muted">ID</label>
                            <input type="text" class="form-control" value="@Model.EtiquetaId" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre *</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la etiqueta" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoriaId" class="form-label">Categoría *</label>
                            <select asp-for="CategoriaId"
                                    class="form-select"
                                    asp-items="ViewBag.Categorias">
                                <option value="0">-- Seleccione una categoría --</option>
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Activa" class="form-check-input" type="checkbox" />
                            <label asp-for="Activa" class="form-check-label">
                                Activa
                            </label>
                        </div>

                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Count > 0)
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                @foreach (var error in ViewData.ModelState[""].Errors)
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}