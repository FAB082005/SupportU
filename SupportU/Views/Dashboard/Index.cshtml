@{
    Func<string, string> t = key =>
    {
        var translations = ViewData["Translations"] as Dictionary<string, string>
            ?? new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
        return translations.TryGetValue(key, out var val) ? val : key;
    };
    ViewData["Title"] = t("Dashboard_Title");
}

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <i class="bi bi-graph-up-arrow me-3" style="font-size: 2.5rem; color: #007bff;"></i>
                <div>
                    <h2 class="mb-0">@t("Dashboard_Header")</h2>
                    <p class="text-muted mb-0">@t("Dashboard_Subtitle")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Primera fila: Tarjetas de métricas -->
    <div class="row g-3 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                            <i class="bi bi-star-fill text-primary" style="font-size: 1.8rem;"></i>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">@t("Dashboard_Card_AverageRating")</h6>
                    <h2 class="mb-1 fw-bold text-primary" id="promedioValoraciones">0</h2>
                    <small class="text-muted">⭐ @t("Dashboard_Card_AverageRating_Subtitle")</small>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 1.8rem;"></i>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">@t("Dashboard_Card_SLACompliance")</h6>
                    <h2 class="mb-1 fw-bold text-success" id="cumplimientoSLA">0%</h2>
                    <small class="text-muted" id="cumplimientoDetalle">0 @t("Dashboard_Card_SLACompliance_Subtitle")</small>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3">
                            <i class="bi bi-ticket-detailed-fill text-info" style="font-size: 1.8rem;"></i>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">@t("Dashboard_Card_TotalTickets")</h6>
                    <h2 class="mb-1 fw-bold text-info" id="totalTickets">0</h2>
                    <small class="text-muted">@t("Dashboard_Card_TotalTickets_Subtitle")</small>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                            <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 1.8rem;"></i>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">@t("Dashboard_Card_PendingTickets")</h6>
                    <h2 class="mb-1 fw-bold text-warning" id="ticketsPendientes">0</h2>
                    <small class="text-muted">@t("Dashboard_Card_PendingTickets_Subtitle")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Segunda fila: Gráficos principales -->
    <div class="row g-3 mb-4">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-pie-chart-fill me-2 text-primary"></i>
                        <h5 class="mb-0 fw-semibold">@t("Dashboard_Chart_TicketsByStatus")</h5>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="chartEstados" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-bar-chart-fill me-2 text-success"></i>
                        <h5 class="mb-0 fw-semibold">@t("Dashboard_Chart_TicketsByMonth")</h5>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="chartMeses" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Tercera fila: Ranking y categorías -->
    <div class="row g-3">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-trophy-fill me-2 text-warning"></i>
                        <h5 class="mb-0 fw-semibold">@t("Dashboard_Chart_TopTechnicians")</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="tablaRanking">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-center" width="50">@t("Dashboard_Table_Rank")</th>
                                    <th>@t("Dashboard_Table_Technician")</th>
                                    <th class="text-center" width="120">@t("Dashboard_Table_Rating")</th>
                                    <th class="text-center" width="120">@t("Dashboard_Table_Tickets")</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        <div class="spinner-border spinner-border-sm me-2" role="status">
                                            <span class="visually-hidden">@t("Dashboard_Loading")</span>
                                        </div>
                                        @t("Dashboard_Loading")
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-x-circle-fill me-2 text-danger"></i>
                        <h5 class="mb-0 fw-semibold">@t("Dashboard_Chart_MostBreaches")</h5>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="chartIncumplimientos" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Inicializar traducciones para JavaScript
        window.__i18n = window.__i18n || {};
        window.__i18n.translations = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewData["Translations"] ?? new Dictionary<string, string>()));
        window.__i18n.t = function (k, f) { return (window.__i18n.translations && window.__i18n.translations[k]) ? window.__i18n.translations[k] : (f || k); };

        // Configuración de colores para estados
        const coloresEstados = {
            'Pendiente': '#ffc107',
            'Asignado': '#17a2b8',
            'En Proceso': '#007bff',
            'Resuelto': '#28a745',
            'Cerrado': '#6c757d'
        };

        // Cargar todos los datos al iniciar
        $(document).ready(function() {
            cargarPromedioValoraciones();
            cargarCumplimientoSLA();
            cargarTicketsPorEstado();
            cargarTicketsPorMes();
            cargarRankingTecnicos();
            cargarIncumplimientos();
        });

        // 1. Promedio de valoraciones
        function cargarPromedioValoraciones() {
            $.get('/Dashboard/GetPromedioValoraciones', function(data) {
                $('#promedioValoraciones').text(data.promedio.toFixed(2));
            }).fail(function() {
                $('#promedioValoraciones').text('N/A');
            });
        }

        // 2. Cumplimiento SLA
        function cargarCumplimientoSLA() {
            $.get('/Dashboard/GetCumplimientoSLA', function(data) {
                $('#cumplimientoSLA').text(data.porcentaje.toFixed(1) + '%');
                $('#cumplimientoDetalle').text(data.cumplidos + ' de ' + data.total + ' ' + window.__i18n.t('Dashboard_Card_SLACompliance_Subtitle', 'tickets'));
            }).fail(function() {
                $('#cumplimientoSLA').text('N/A');
            });
        }

        // 3. Gráfico de tickets por estado (PIE)
        function cargarTicketsPorEstado() {
            $.get('/Dashboard/GetTicketsPorEstado', function(data) {
                const labels = Object.keys(data);
                const valores = Object.values(data);
                const colores = labels.map(estado => coloresEstados[estado] || '#6c757d');

                // Calcular totales
                const total = valores.reduce((a, b) => a + b, 0);
                const pendientes = data['Pendiente'] || 0;

                $('#totalTickets').text(total);
                $('#ticketsPendientes').text(pendientes);

                const ctx = document.getElementById('chartEstados');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: labels,
                        datasets: [{
                            data: valores,
                            backgroundColor: colores,
                            borderWidth: 2,
                            borderColor: '#fff'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 15,
                                    font: { size: 12 }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        const porcentaje = ((context.parsed / total) * 100).toFixed(1);
                                        return context.label + ': ' + context.parsed + ' (' + porcentaje + '%)';
                                    }
                                }
                            }
                        }
                    }
                });
            }).fail(function() {
                console.error('Error al cargar gráfico de estados');
            });
        }

        // 4. Gráfico de tickets por mes (BARRAS)
        function cargarTicketsPorMes() {
            $.get('/Dashboard/GetTicketsPorMes', function(data) {
                const ctx = document.getElementById('chartMeses');

                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.map(d => d.mes),
                        datasets: [{
                            label: window.__i18n.t('Dashboard_TicketsCreated', 'Tickets Creados'),
                            data: data.map(d => d.cantidad),
                            backgroundColor: 'rgba(0, 123, 255, 0.7)',
                            borderColor: '#007bff',
                            borderWidth: 2,
                            borderRadius: 5
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1,
                                    font: { size: 11 }
                                },
                                grid: {
                                    color: 'rgba(0,0,0,0.05)'
                                }
                            },
                            x: {
                                ticks: {
                                    font: { size: 11 }
                                },
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: { display: false }
                        }
                    }
                });
            }).fail(function() {
                console.error('Error al cargar gráfico de meses');
            });
        }

        // 5. Ranking de técnicos (TABLA)
        function cargarRankingTecnicos() {
            $.get('/Dashboard/GetRankingTecnicos', function(data) {
                const tbody = $('#tablaRanking tbody');

                if (data.length === 0) {
                    tbody.html('<tr><td colspan="4" class="text-center text-muted py-4">' +
                              window.__i18n.t('Dashboard_NoData', 'No hay datos disponibles') +
                              '</td></tr>');
                    return;
                }

                const filas = data.map((tecnico, index) => {
                    const medalla = index === 0 ? '🥇' : index === 1 ? '🥈' : index === 2 ? '🥉' : (index + 1);
                    return `
                        <tr>
                            <td class="text-center fw-bold">${medalla}</td>
                            <td>${tecnico.nombre}</td>
                            <td class="text-center">
                                <span class="badge bg-warning text-dark">
                                    ⭐ ${tecnico.calificacion.toFixed(2)}
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-primary">${tecnico.ticketsResueltos}</span>
                            </td>
                        </tr>
                    `;
                }).join('');

                tbody.html(filas);
            }).fail(function() {
                $('#tablaRanking tbody').html(
                    '<tr><td colspan="4" class="text-center text-danger py-4">' +
                    window.__i18n.t('Dashboard_Error', 'Error al cargar datos') +
                    '</td></tr>'
                );
            });
        }

        // 6. Categorías con incumplimientos (BARRAS HORIZONTALES)
        function cargarIncumplimientos() {
            $.get('/Dashboard/GetCategoriasIncumplimientos', function(data) {
                const canvas = document.getElementById('chartIncumplimientos');

                if (data.length === 0) {
                    canvas.parentElement.innerHTML = '<p class="text-center text-muted py-4">' +
                                                     window.__i18n.t('Dashboard_NoBreaches', 'No hay incumplimientos registrados') +
                                                     '</p>';
                    return;
                }

                new Chart(canvas, {
                    type: 'bar',
                    data: {
                        labels: data.map(d => d.categoria),
                        datasets: [{
                            label: window.__i18n.t('Dashboard_Breaches', 'Incumplimientos'),
                            data: data.map(d => d.incumplimientos),
                            backgroundColor: 'rgba(220, 53, 69, 0.7)',
                            borderColor: '#dc3545',
                            borderWidth: 2,
                            borderRadius: 5
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        indexAxis: 'y',
                        scales: {
                            x: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1,
                                    font: { size: 11 }
                                },
                                grid: {
                                    color: 'rgba(0,0,0,0.05)'
                                }
                            },
                            y: {
                                ticks: {
                                    font: { size: 11 }
                                },
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: { display: false }
                        }
                    }
                });
            }).fail(function() {
                console.error('Error al cargar incumplimientos');
            });
        }
    </script>
}