@model IEnumerable<SupportU.Application.DTOs.CategoriaDTO>
@{
    // Helper local para traducciones
    Func<string, string> t = key =>
    {
        var translations = ViewData["Translations"] as Dictionary<string, string>
            ?? new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
        return translations.TryGetValue(key, out var val) ? val : key;
    };

    ViewData["Title"] = t("Categoria_Index_Title");
}

<section class="section mt-5 mt-lg-7 pt-4 pt-lg-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">@t("Categoria_Management")</h2>
            <a asp-controller="Categoria" asp-action="Create" class="btn btn-create" title="@t("Btn_NewCategory")">
                <i class="bi bi-plus-circle"></i> @t("Btn_NewCategory")
            </a>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@t("Label_Nombre")</th>
                        <th>@t("Label_Descripcion")</th>
                        <th>@t("Label_SLA")</th>
                        <th>@t("Label_CriterioAsignacion")</th>
                        <th>@t("Label_Activa")</th>
                        <th class="text-center">@t("Label_Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>@item.SlaNombre</td>
                            <td>@item.CriterioAsignacion</td>
                            <td>
                                @if (item.Activa)
                                {
                                    <span class="badge bg-success">@t("Status_Active")</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@t("Status_Inactive")</span>
                                }
                            </td>

                            <td class="text-center">
                                <a asp-controller="Categoria" asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-edit" title="@t("Btn_Edit")">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <form id="delete-form-@item.CategoriaId"
                                      asp-controller="Categoria"
                                      asp-action="Delete"
                                      asp-route-id="@item.CategoriaId"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="estado" value="@(item.Activa ? "1" : "0")" />
                                    <button type="button"
                                            class="btn btn-sm @(item.Activa ? "btn-danger js-delete-category" : "btn-success js-delete-category")"
                                            data-id="@item.CategoriaId"
                                            title="@(item.Activa ? t("Btn_Delete") : t("Btn_NewCategory"))">
                                        <i class="bi bi-power"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <script>
        (function () {
            // Exponer traducciones al JS
            window.__i18n = window.__i18n || {};
            try {
                window.__i18n.translations = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewData["Translations"] ?? new Dictionary<string, string>()));
            } catch (e) {
                window.__i18n.translations = {};
            }
            window.__i18n.t = function (key, fallback) {
                return (window.__i18n.translations && window.__i18n.translations[key]) ? window.__i18n.translations[key] : (fallback || key);
            };

            document.addEventListener('click', function (e) {
                var btn = e.target.closest('.js-delete-category');
                if (!btn) return;

                e.preventDefault();

                var id = btn.getAttribute('data-id');
                if (!id) return;

                var form = document.getElementById('delete-form-' + id);
                var estadoInput = form ? form.querySelector('input[name="estado"]') : null;
                var estadoVal = estadoInput ? estadoInput.value : "1"; // por defecto inactivar
                var willInactivate = estadoVal === "1";

                // Seleccionar claves/textos según acción (inactivar vs reactivar)
                var titleKey = willInactivate ? 'Swal_Delete_Title' : 'Categoria_Swal_Reactivate_Title';
                var textKey = willInactivate ? 'Swal_Delete_Text' : 'Categoria_Swal_Reactivate_Text';
                var confirmKey = willInactivate ? 'Swal_Delete_Confirm' : 'Categoria_Swal_Reactivate_Confirm';
                var cancelKey = willInactivate ? 'Swal_Delete_Cancel' : 'Categoria_Swal_Reactivate_Cancel';
                var confirmColor = willInactivate ? '#d33' : '#198754';

                Swal.fire({
                    title: window.__i18n.t(titleKey, willInactivate ? 'Delete this category?' : 'Reactivate this category?'),
                    text: window.__i18n.t(textKey, willInactivate ? 'This action will mark the category as inactive.' : 'This action will mark the category as active again.'),
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: window.__i18n.t(confirmKey, willInactivate ? 'Delete' : 'Reactivate'),
                    cancelButtonText: window.__i18n.t(cancelKey, 'Cancel'),
                    confirmButtonColor: confirmColor
                }).then(function (result) {
                    if (result.isConfirmed) {
                        if (form) {
                            form.submit();
                        } else {
                            console.warn('Delete form not found for id', id);
                        }
                    }
                });
            }, false);
        })();
    </script>
}
