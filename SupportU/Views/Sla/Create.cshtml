@model SupportU.Application.DTOs.SlaDTO
@{
    Func<string, string> t = key =>
    {
        var translations = ViewData["Translations"] as Dictionary<string, string>
            ?? new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
        return translations.TryGetValue(key, out var val) ? val : key;
    };
    ViewData["Title"] = t("Sla_Title_Create");
}

<section class="section mt-5">
    <div class="container">
        <h2>@t("Sla_Title_Create")</h2>
        <form asp-action="Create" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">@t("Sla_Label_Nombre")</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TiempoRespuestaMinutos" class="form-label fw-bold">@t("Sla_Label_TiempoRespuesta")</label>
                <input asp-for="TiempoRespuestaMinutos" class="form-control" />
                <span asp-validation-for="TiempoRespuestaMinutos" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TiempoResolucionMinutos" class="form-label fw-bold">@t("Sla_Label_TiempoResolucion")</label>
                <input asp-for="TiempoResolucionMinutos" class="form-control" />
                <span asp-validation-for="TiempoResolucionMinutos" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Activo" class="form-check-input" />
                <label asp-for="Activo" class="form-check-label">@t("Sla_Label_Activo")</label>
            </div>
            <div class="d-flex gap-2 justify-content-end">
                <button type="submit" class="btn btn-primary">@t("Sla_Btn_Save")</button>
                <a asp-action="Index" class="btn btn-outline-secondary">@t("Sla_Btn_Cancel")</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
