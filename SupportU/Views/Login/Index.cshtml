@model SupportU.Application.DTOs.Login
@{
    Func<string, string> t = key =>
    {
        var translations = ViewData["Translations"] as Dictionary<string, string>
            ?? new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
        return translations.TryGetValue(key, out var val) ? val : key;
    };

    ViewData["Title"] = t("Login_Title");
}

<section class="section mt-5 mt-lg-7 pt-4 pt-lg-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4">
                        <div class="text-center mb-3">
                            <h2 class="fw-bold">@t("Login_WelcomeTitle")</h2>
                            <p class="text-muted">@t("Login_WelcomeSubtitle")</p>
                        </div>

                        <form asp-action="Login" method="post" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-bold">@t("Login_Label_Email")</label>
                                <input asp-for="Email" class="form-control form-control-lg" autocomplete="username" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3 position-relative">
                                <label asp-for="Password" class="form-label fw-bold">@t("Login_Label_Password")</label>
                                <div class="input-group">
                                    <input asp-for="Password" type="password" id="pwdInput" class="form-control form-control-lg" autocomplete="current-password" />
                                    <button type="button" id="togglePwd" class="btn btn-outline-secondary" title="@t("Login_TogglePassword")">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label">@t("Login_Label_RememberMe")</label>
                                </div>

                                <a asp-action="ForgotPassword" class="small">@t("Login_Link_ForgotPassword")</a>
                            </div>

                            <div class="d-flex gap-2 justify-content-end">
                                <button type="submit" class="btn btn-primary btn-lg">@t("Login_Btn_Submit")</button>
                                <a asp-controller="Usuario" asp-action="Create" class="btn btn-outline-secondary btn-lg">@t("Login_Btn_Register")</a>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer bg-light text-center">
                        <small class="text-muted">@t("Login_HelpContactAdmin")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["ToastMessage"] != null)
    {
        <script>
            (function () {
                try {
            @Html.Raw(TempData["ToastMessage"].ToString());
                } catch (e) {
                    console.error('Error ejecutando ToastMessage', e);
                }
            })();
        </script>
    }

    @if (TempData.Peek("LoginLogs") != null)
    {
        <script>
            @Html.Raw(TempData.Peek("LoginLogs").ToString());
        </script>
    }
}
