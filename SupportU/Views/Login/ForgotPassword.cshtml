@model SupportU.Application.DTOs.UsuarioDTO
@{
    Func<string, string> t = key =>
    {
        var translations = ViewData["Translations"] as System.Collections.Generic.Dictionary<string, string>
            ?? new System.Collections.Generic.Dictionary<string, string>(System.StringComparer.OrdinalIgnoreCase);
        return translations.TryGetValue(key, out var val) ? val : key;
    };

    ViewData["Title"] = t("Forgot_Title");
}

<section class="vh-100 d-flex align-items-center" style="background: linear-gradient(135deg,#f6f9ff 0%,#eef6ff 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-10 col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 overflow-hidden">
                    <div class="row g-0">
                        <div class="col-md-5 d-none d-md-flex align-items-center justify-content-center" style="background: linear-gradient(180deg,#0d6efd 0%,#3aa0ff 100%);">
                            <div class="text-center text-white p-4 w-100">
                                <img src="~/assets/img/supportU.jpg" alt="SupportU" style="height:48px; margin-bottom:18px;" />
                                <h3 class="h5 mb-2">@t("Forgot_Title")</h3>
                                <p class="small mb-0 opacity-85">@t("Hero_Description")</p>
                            </div>
                        </div>

                        <div class="col-md-7">
                            <div class="card-body p-4 p-md-5">
                                <div class="mb-3 text-center">
                                    <h4 class="mb-1">@t("Forgot_Title")</h4>
                                    <p class="small text-muted mb-0">@t("Forgot_Label_Email") &middot; @t("Forgot_Label_NewPassword")</p>
                                </div>

                                <form asp-action="ForgotPassword" method="post" novalidate>
                                    @Html.AntiForgeryToken()

                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label fw-semibold">@t("Forgot_Label_Email")</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-envelope"></i></span>
                                            <input asp-for="Email" class="form-control border-start-0" placeholder="usuario@ejemplo.com" aria-label="@t("Forgot_Label_Email")" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">@t("Forgot_Label_NewPassword")</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-key"></i></span>
                                            <input asp-for="PasswordHash" id="PasswordHash" name="PasswordHash" type="password" class="form-control border-start-0" placeholder="••••••••" aria-label="@t("Forgot_Label_NewPassword")" autocomplete="new-password" />
                                            <button type="button" class="btn btn-outline-secondary" id="togglePwd" aria-label="Toggle password visibility">
                                                <i id="togglePwdIcon" class="bi bi-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="PasswordHash" class="text-danger small"></span>
                                    </div>

                                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-end mt-4">
                                        <button type="submit" class="btn btn-primary px-4">@t("Forgot_Btn_Update")</button>
                                        <a asp-action="Index" class="btn btn-outline-secondary px-4">@t("Forgot_Btn_Cancel")</a>
                                    </div>
                                </form>

                                <hr class="my-4" />

                                <div class="text-center small text-muted">
                                    @t("Footer_AllRightsReserved")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-3 small text-muted">
                    <span>@t("Footer_Course")</span>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            // Toggle simple de visibilidad de contraseña
            const pwd = document.getElementById('PasswordHash');
            const toggleBtn = document.getElementById('togglePwd');
            const toggleIcon = document.getElementById('togglePwdIcon');

            function setIcon(show) {
                if (!toggleIcon) return;
                toggleIcon.classList.toggle('bi-eye', !show);
                toggleIcon.classList.toggle('bi-eye-slash', show);
            }

            if (toggleBtn && pwd) {
                toggleBtn.setAttribute('type', 'button');
                setIcon(false);
                toggleBtn.addEventListener('click', function () {
                    const isPassword = pwd.type === 'password';
                    pwd.type = isPassword ? 'text' : 'password';
                    setIcon(isPassword);
                    try { pwd.focus(); } catch (e) { /* noop */ }
                });
            }
        })();
    </script>
  @if (TempData["ToastMessage"] != null)
    {
        @Html.Raw(TempData["ToastMessage"].ToString())
    }

    @if (TempData.Peek("ForgotLogs") != null)
    {
        @Html.Raw(TempData.Peek("ForgotLogs").ToString())
    }
}
