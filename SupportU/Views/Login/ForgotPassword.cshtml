@model SupportU.Application.DTOs.UsuarioDTO
@{
    Func<string, string> t = key =>
    {
        var translations = ViewData["Translations"] as Dictionary<string, string>
            ?? new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase);
        return translations.TryGetValue(key, out var val) ? val : key;
    };

    ViewData["Title"] = t("Forgot_Title");
}

<form asp-action="ForgotPassword" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Email" class="form-label fw-bold">@t("Forgot_Label_Email")</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">@t("Forgot_Label_NewPassword")</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@t("Forgot_Btn_Update")</button>
    <a asp-action="Index" class="btn btn-outline-secondary">@t("Forgot_Btn_Cancel")</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["ToastMessage"] != null)
    {
        <script>
            (function () {
                try {
            @Html.Raw(TempData["ToastMessage"].ToString());
                } catch (e) {
                    console.error('Error ejecutando ToastMessage', e);
                }
            })();
        </script>
    }

    @if (TempData.Peek("ForgotLogs") != null)
    {
        <script>
            (function () {
                try {
            @Html.Raw(TempData.Peek("ForgotLogs").ToString());
                } catch (e) {
                    console.error('Error ejecutando ForgotLogs', e);
                }
            })();
        </script>
    }
}
